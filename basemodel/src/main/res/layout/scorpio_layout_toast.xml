<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/content_operateResult"
        android:layout_width="@dimen/px_768"
        android:layout_height="@dimen/px_78"
        android:layout_centerHorizontal="true"
        android:background="@drawable/scorpio_bg_toast"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_operateResult"
            android:layout_width="@dimen/px_48"
            android:layout_height="@dimen/px_48"
            android:src="@drawable/icon_succeed" />

        <TextView
            android:id="@+id/message_operateResult"
            style="@style/TextLineStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/px_42"
            android:layout_marginStart="@dimen/px_24"
            android:gravity="center"
            android:maxLength="24"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>