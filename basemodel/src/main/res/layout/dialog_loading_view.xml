<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_radius_lucency_black"
        android:gravity="center"
        android:paddingLeft="@dimen/px_40"
        android:paddingTop="@dimen/px_20"
        android:paddingRight="@dimen/px_40"
        android:paddingBottom="@dimen/px_20">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/px_64"
            android:layout_height="@dimen/px_64"
            android:indeterminateTint="@android:color/white" />

        <TextView
            android:id="@+id/toast_text"
            style="@style/TextLineStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:gravity="center"
            android:maxWidth="@dimen/px_600"
            android:text="加载中..."
            android:textColor="@android:color/white"
            android:textSize="@dimen/px_54" />

    </LinearLayout>
</LinearLayout>